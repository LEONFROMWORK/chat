<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold"><%= @chat_room.name %></h2>
    <%= link_to "â† Back to Rooms", chat_rooms_path, class: "text-blue-500 hover:text-blue-700" %>
  </div>
  
  <div class="bg-white rounded-lg shadow-lg h-96 flex flex-col">
    <div class="flex-1 overflow-y-auto p-4" id="messages">
      <% @messages.each do |message| %>
        <div class="mb-4">
          <div class="font-semibold text-gray-700"><%= message.user.name %></div>
          <div class="text-gray-600"><%= message.content %></div>
          <div class="text-xs text-gray-400"><%= message.created_at.strftime("%l:%M %p") %></div>
        </div>
      <% end %>
    </div>
    
    <div class="border-t p-4">
      <%= form_with model: [@chat_room, @message], local: true, data: { turbo: false }, class: "flex gap-2" do |form| %>
        <%= form.text_field :content, placeholder: "Type your message...", 
            class: "flex-1 border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500",
            autocomplete: "off", required: true %>
        <%= form.submit "Send", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg" %>
      <% end %>
    </div>
  </div>
</div>

<script>
  // Auto-scroll to bottom
  document.addEventListener('DOMContentLoaded', function() {
    const messages = document.getElementById('messages');
    if (messages) {
      messages.scrollTop = messages.scrollHeight;
    }
  });
</script>