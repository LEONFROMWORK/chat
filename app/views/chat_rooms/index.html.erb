<div class="max-w-4xl mx-auto">
  <h2 class="text-2xl font-bold mb-6">Chat Rooms</h2>
  
  <div class="grid gap-4">
    <% @chat_rooms.each do |chat_room| %>
      <%= link_to chat_room_path(chat_room), class: "block" do %>
        <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold text-gray-800"><%= chat_room.name %></h3>
          <p class="text-gray-600 mt-2">Click to enter this chat room</p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>