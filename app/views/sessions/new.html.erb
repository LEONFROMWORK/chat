<div class="max-w-md mx-auto">
  <h2 class="text-2xl font-bold mb-6 text-center">Login / Sign Up</h2>
  
  <%= form_with scope: :session, url: login_path, local: true, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Your name" %>
    </div>
    
    <div class="mb-6">
      <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "your@email.com", required: true %>
    </div>
    
    <div class="flex items-center justify-center">
      <%= form.submit "Enter Chat", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" %>
    </div>
  <% end %>
  
  <p class="text-center text-gray-500 text-xs">
    Enter your email to login or create a new account
  </p>
</div>